<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80sp"
            android:background="#006837"
    >
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trang Chủ"
                android:textColor="#FFF"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
        />

        <ImageButton
                android:id="@+id/btn_menu"
                android:layout_marginLeft="20sp"
                android:layout_centerVertical="true"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:src="@drawable/ic_menu"
                android:background="#006837"
        />
    </RelativeLayout>
    <View
            android:layout_width="match_parent"
            android:layout_height="15sp"
            android:layout_marginTop="80sp"
            android:background="#A8A8A8"
    />
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#A8A8A8"
            android:layout_marginTop="95sp"
    >
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200sp"
                android:orientation="horizontal"
                android:weightSum="2"
        >
            <LinearLayout
                    android:background="#FFF"
                    android:id="@+id/nguoi_truc_tuyen"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_marginRight="7sp"
                    android:layout_height="200sp">
                <TextView
                        android:text="Người trực tuyến"
                        android:layout_marginLeft="5sp"
                        android:layout_marginTop="10sp"
                        android:textColor="#7E898D"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:textColor="#7E898D"
                        android:textSize="30sp"
                        android:layout_marginTop="50sp"
                        android:text="0"
                />

            </LinearLayout>
            <LinearLayout
                    android:id="@+id/khuyen_mai"
                    android:background="#FFF"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginLeft="7sp"
                    android:layout_width="match_parent"
                    android:layout_height="200sp">

                <TextView
                        android:text="Khuyến mãi"
                        android:layout_marginLeft="5sp"
                        android:layout_marginTop="10sp"
                        android:textColor="#7E898D"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:textColor="#7E898D"
                        android:textSize="30sp"
                        android:layout_marginTop="50sp"
                        android:text="9"
                />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
                android:layout_marginTop="15sp"
                android:layout_width="match_parent"
                android:layout_height="200sp">

            <LinearLayout
                    android:layout_weight="1"
                    android:id="@+id/thuc_don"
                    android:background="#FFF"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_marginRight="7sp"
                    android:layout_height="200sp">

                <TextView
                        android:text="Thực đơn"
                        android:layout_marginLeft="5sp"
                        android:layout_marginTop="10sp"
                        android:textColor="#7E898D"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                />
                <ImageView
                        android:layout_width="50sp"
                        android:layout_height="50sp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_restaurant_menu"
                        android:layout_marginTop="50sp"
                />

            </LinearLayout>
            <LinearLayout
                    android:layout_weight="1"
                    android:id="@+id/giaohang_dathang"
                    android:background="#FFF"
                    android:orientation="vertical"
                    android:layout_marginLeft="7sp"
                    android:layout_width="match_parent"
                    android:layout_height="200sp">

                <TextView
                        android:text="Giao hàng/ Đặt hàng"
                        android:layout_marginLeft="5sp"
                        android:layout_marginTop="10sp"
                        android:textColor="#7E898D"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:textColor="#7E898D"
                        android:textSize="30sp"
                        android:layout_marginTop="50sp"
                        android:text="29/4"
                />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15sp"
        >


        </LinearLayout>


    </LinearLayout>
</RelativeLayout>