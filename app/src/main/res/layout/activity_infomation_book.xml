<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity.InformationShipActivity">
    <RelativeLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="80sp"
            android:background="#006837"
    >
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thông tin giao hàng"
                android:textColor="#FFF"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
        />

        <ImageButton
                android:id="@+id/btn_back"
                android:layout_marginLeft="20sp"
                android:layout_centerVertical="true"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:src="@drawable/ic_back"
                android:background="#006837"
        />
    </RelativeLayout>
    <RelativeLayout
            android:layout_below="@+id/toolbar"
            android:background="#F6F7F8"
            android:layout_marginBottom="50sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:id="@+id/information"
                android:background="#FFF"
                android:layout_marginTop="20sp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="Tên khách hàng"
                        android:textStyle="bold"
                        android:layout_marginRight="10sp"
                        android:textColor="#000"
                        android:textSize="18sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/ten_khach_hang"
                        android:layout_gravity="center_vertical"
                        android:text="09/01/2019"
                        android:textSize="18sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

            <View
                    android:background="#57666B"
                    android:layout_marginTop="10sp"
                    android:layout_marginLeft="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="1sp"/>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="Số lượng"
                        android:textStyle="bold"
                        android:layout_marginRight="10sp"
                        android:textColor="#000"
                        android:textSize="18sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/so_luong"
                        android:layout_gravity="center_vertical"
                        android:text="09/01/2019"
                        android:textSize="18sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

            <View
                    android:background="#57666B"
                    android:layout_marginTop="10sp"
                    android:layout_marginLeft="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="1sp"/>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="Thời gian"
                        android:textStyle="bold"
                        android:layout_marginRight="10sp"
                        android:textColor="#000"
                        android:textSize="18sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/thoi_gian"
                        android:layout_gravity="center_vertical"
                        android:text="09/01/2019"
                        android:textSize="18sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

            <View
                    android:background="#57666B"
                    android:layout_marginTop="10sp"
                    android:layout_marginLeft="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="1sp"/>


            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="Ghi chú"
                        android:textStyle="bold"
                        android:layout_marginRight="10sp"
                        android:textColor="#000"
                        android:textSize="18sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/ghi_chu"
                        android:layout_gravity="center_vertical"
                        android:text="09/01/2019"
                        android:textSize="18sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

            <View
                    android:background="#57666B"
                    android:layout_marginTop="10sp"
                    android:layout_marginLeft="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="1sp"/>

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
            android:id="@+id/list_btn"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="50sp">
        <Button
                android:id="@+id/accept"
                android:layout_weight="1"
                android:textColor="#FFF"
                android:text="Chấp nhận"
                android:background="#2AB74E"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        <Button
                android:id="@+id/decline"
                android:layout_weight="1"
                android:text="Từ chối"
                android:textColor="#FFF"
                android:background="#F44336"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

    </LinearLayout>


</RelativeLayout>